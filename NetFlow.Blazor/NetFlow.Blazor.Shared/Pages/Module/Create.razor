@page "/module/create"
@inject NavigationManager NavigationManager
@inject IApiClientFactory ApiClientFactory
@inject IHttpClientFactory HttpClientFactory

<div class="content-root">
    <div class="card toolbar">
        <DxToolbar ItemRenderStyleMode="ToolbarRenderStyleMode.Plain">
            <Items>
                <DxToolbarItem IconCssClass="back-icon icon medium-icon" Tooltip="Go to Back" Click="@NavigateBack" />
                <DxToolbarItem>
                    <Template>
                        <div class="custom-item">
                            <div class="title">Modül Tanımlama</div>
                        </div>
                    </Template>
                </DxToolbarItem>
                <DxToolbarItem Alignment="ToolbarItemAlignment.Right">
                    <Template>
                        <DxButton Text="Kaydet"
                                  Click="SaveFromOutside"
                                  RenderStyleMode="ButtonRenderStyleMode.Outline"
                                  RenderStyle="ButtonRenderStyle.Success" />
                    </Template>
                </DxToolbarItem>
            </Items>
        </DxToolbar>
    </div>
    <div class="module-create">
        <EditForm EditContext="@editContext" Context="formContext">
            <DataAnnotationsValidator />

            <DxFormLayout ColSpanMd="6">
                <DxFormLayoutItem Caption="Kodu">
                    <DxTextBox @bind-Text="model.Code"
                               ValidationEnabled="true"
                               ShowValidationIcon="true" />
                </DxFormLayoutItem>
                <DxFormLayoutItem Caption="Adı">
                    <DxTextBox @bind-Text="model.Name"
                               ValidationEnabled="true"
                               ShowValidationIcon="true" />
                </DxFormLayoutItem>
                <DxFormLayoutItem ColSpanMd="12">
                    <ValidationSummary />
                </DxFormLayoutItem>
            </DxFormLayout>
        </EditForm>

    </div>
</div>

<DxPopup @bind-Visible="popupVisible"
         HeaderText="@popupTitle"
         Width="420px"
         ShowFooter="true"
         CloseOnOutsideClick="false"
         HeaderCssClass="@(isSuccess ? "dx-bg-success" : "dx-bg-danger")"
         AnimationType="PopupAnimationType.Fade">

    <HeaderTemplate>
        <div class="popup-basic-header @(isSuccess ? "success" : "danger")">
            <span class="popup-basic-header-title">
                @popupTitle
            </span>
        </div>
    </HeaderTemplate>

    <BodyTemplate>
        <div class="popup-basic-body">
            <div class="popup-basic-icon-wrapper">
                <div class="popup-basic-icon @(isSuccess ? "success" : "danger")">
                    @(isSuccess ? "✓" : "!")
                </div>
            </div>

            <div class="popup-basic-content">
                <h5 class="popup-basic-title">
                    @(isSuccess ? "İşlem Tamamlandı" : "Bir Hata Oluştu")
                </h5>
                <p class="popup-basic-message">
                    @popupMessage
                </p>
            </div>
        </div>
    </BodyTemplate>

    <FooterTemplate>
        <div class="popup-basic-footer">
            <DxButton Text="Kapat"
                      Width="110px"
                      RenderStyle="@(isSuccess ? ButtonRenderStyle.Success : ButtonRenderStyle.Danger)"
                      Click="OnPopupOk" />
        </div>
    </FooterTemplate>

</DxPopup>


@code {
    private ModuleModel model = new();
    private EditContext editContext = default!;
    private bool isSaving, popupVisible, isSuccess;
    private string popupTitle = "", popupMessage = "";

    protected override void OnInitialized()
    {
        editContext = new EditContext(model);
    }

    private async Task SaveFromOutside()
    {
        if (isSaving) return;
        var isValid = editContext.Validate();
        if (!isValid) return;
        await HandleValidSubmit();
    }

    private async Task HandleValidSubmit()
    {
        if (isSaving) return;
        isSaving = true;

        try
        {
            var httpClient = HttpClientFactory.CreateClient("ApiClient");
            var client = await ApiClientFactory.CreateAsync(httpClient);
            var response = await client.PostAsJsonAsync("api/modules", model);

            if (response.IsSuccessStatusCode)
            {
                isSuccess = true;
                popupTitle = "Başarılı";
                popupMessage = "Modül başarıyla oluşturuldu.";
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                isSuccess = false;
                popupTitle = "Hata";
                popupMessage = !string.IsNullOrEmpty(errorContent) ? errorContent : "Modül oluşturulurken bir hata meydana geldi.";
            }
        }
        catch (Exception ex)
        {
            isSuccess = false;
            popupTitle = "Bağlantı Hatası";
            popupMessage = "Sunucu yanıt vermiyor. Lütfen ağ bağlantınızı kontrol edin. Hata: " + ex.Message;
        }
        finally
        {
            popupVisible = true;
            isSaving = false;
            StateHasChanged(); // Arayüzü güncellemek için
        }
    }

    private void HandleInvalidSubmit() => popupVisible = false;

    private void OnPopupOk()
    {
        popupVisible = false;
        if (isSuccess)
            NavigationManager.NavigateTo("/module/list");
    }

    private void NavigateBack() => NavigationManager.NavigateTo("/module/list");
}