                <DxTreeViewNode Text="Teminat Listesi" NavigateUrl="/guarantee/list" />
            </Nodes>
        </DxTreeViewNode>
        <DxTreeViewNode Text="Ýhale Yönetimi" AllowSelection="false" Expanded="true" IconCssClass="planning-icon icon medium-icon">
            <Nodes>
                <DxTreeViewNode Text="Ýhale Listesi" NavigateUrl="/tender/list" />
            </Nodes>
        </DxTreeViewNode>
        <DxTreeViewNode Text="Satýþ Yönetimi" AllowSelection="false" Expanded="true" IconCssClass="analytics-icon icon medium-icon">
            <Nodes>
                <DxTreeViewNode Text="Satýþ Sipariþleri" NavigateUrl="/netsis/orders/sales/list" />
                <DxTreeViewNode Text="Satýþ Ýrsaliyeleri" NavigateUrl="SalesAnalysis" />
                <DxTreeViewNode Text="Satýþ Faturalarý" NavigateUrl="SalesAnalysis" />
            </Nodes>
        </DxTreeViewNode>
        <DxTreeViewNode Text="Satýnalma Yönetimi" AllowSelection="false" Expanded="true" IconCssClass="analytics-icon icon medium-icon">
            <Nodes>
                <DxTreeViewNode Text="Satýnalma Sipariþleri" NavigateUrl="/netsis/orders/purchase/list" />
                <DxTreeViewNode Text="Satýnalma Ýrsaliyeleri" NavigateUrl="SalesAnalysis" />
                <DxTreeViewNode Text="Satýnalma Faturalarý" NavigateUrl="SalesAnalysis" />
            </Nodes>
        </DxTreeViewNode>
        <DxTreeViewNode Text="Sevkiyat Yönetimi" AllowSelection="false" Expanded="true" IconCssClass="analytics-icon icon medium-icon">
            <Nodes>
                <DxTreeViewNode Text="Sevkiyat Emri" NavigateUrl="/netsis/shipments/shippable-orders" />
                <DxTreeViewNode Text="Sevkiyat Yönetimi" NavigateUrl="/netsis/shipments/management" />
            </Nodes>
        </DxTreeViewNode>
        <DxTreeViewNode Text="Müþteri Yönetimi" AllowSelection="false" Expanded="true" IconCssClass="analytics-icon icon medium-icon">
            <Nodes>
                <DxTreeViewNode Text="Müþteri Listesi" NavigateUrl="SalesAnalysis" />
            </Nodes>
        </DxTreeViewNode>
        <DxTreeViewNode Text="Malzeme Yönetimi" AllowSelection="false" Expanded="true" IconCssClass="analytics-icon icon medium-icon">
            <Nodes>
                <DxTreeViewNode Text="Malzeme Listesi" NavigateUrl="SalesAnalysis" />
            </Nodes>
        </DxTreeViewNode>
        <DxTreeViewNode Text="Demirbaþ Yönetimi" AllowSelection="false" Expanded="true" IconCssClass="analytics-icon icon medium-icon">
            <Nodes>
                <DxTreeViewNode Text="Demirbaþ Listesi" NavigateUrl="/asset/list" />
            </Nodes>
        </DxTreeViewNode>
        <DxTreeViewNode Text="Ayarlar" AllowSelection="false" Expanded="true" IconCssClass="settings-icon icon medium-icon">
            <Nodes>
                <DxTreeViewNode Text="Firma Listesi" NavigateUrl="/firm/list" />
                <DxTreeViewNode Text="Roller" NavigateUrl="/role/list" />
                <DxTreeViewNode Text="Kullanýcýlar" NavigateUrl="/user/list" />
                <DxTreeViewNode Text="Modüller" NavigateUrl="/module/list" />
            </Nodes>
        </DxTreeViewNode>
    </Nodes>
</DxTreeView>

@code {
    [Parameter]
    public string? CurrentModule { get; set; }
}